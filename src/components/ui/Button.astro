---
export interface Props {
  href: string;
  variant?: "primary" | "secondary";
  class?: string;
}
const { href, variant = "primary", class: extraClass = "" } = Astro.props;

const variants = {
  primary: "bg-blue-900 text-white hover:ring-blue-600/50 hover:shadow-lg",
  secondary: "bg-white text-blue-900 hover:ring-white/50 hover:shadow-lg",
};

const classes = [
  "px-4 py-2 rounded-full font-bold text-base text-center shadow-md",
  "transition-all duration-300 hover:ring-2 active:scale-95",
  variants[variant],
  extraClass,
];
---

<a href={href} class:list={classes}>
  <slot />
</a>
