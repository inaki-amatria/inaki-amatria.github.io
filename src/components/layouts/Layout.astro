---
import { ClientRouter } from "astro:transitions";

import "@styles/global.css";

import Footer from "./Footer.astro";
import Header from "./Header.astro";
---

<!doctype html>
<html lang="es" transition:animate="none">
  <head>
    <title>Torneo Internacional Ciudad de Pontevedra</title>
    <meta name="apple-mobile-web-app-title" content="TICP" />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <ClientRouter />

    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700&family=Playfair+Display:wght@700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="bg-gray-50 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 font-['Inter'] antialiased"
  >
    <Header />
    <slot />
    <Footer />
  </body>
</html>
