---
import Pawn from "@assets/icons/Pawn.svg";

const links = [
  { href: "/reglamento", label: "Reglamento" },
  { href: "/premios", label: "Premios" },
  { href: "/partidas", label: "Partidas" },
];
---

<nav
  class="flex flex-col md:flex-row justify-between items-center gap-4 pt-6 pb-12"
>
  <div class="flex justify-between items-center w-full md:w-auto">
    <div class="flex items-center whitespace-nowrap gap-2">
      <Pawn class="w-12 h-12 fill-blue-900 flex-none" />

      <a href="/" class="group text-blue-900">
        <span class="relative inline-block">
          <span class="block text-base leading-tight">
            Torneo Internacional
          </span>

          <span class="block text-xs tracking-widest font-bold uppercase">
            Ciudad de Pontevedra
          </span>

          <span
            class="absolute left-0 -bottom-[2px] w-0 h-0.5 bg-blue-900 transition-all duration-300 group-hover:w-full"
          >
          </span>
        </span>
      </a>
    </div>

    <a href="/contacto" class="button button-primary md:hidden">Contacto</a>
  </div>

  <div
    class="flex overflow-x-auto no-scrollbar whitespace-nowrap w-full md:w-auto gap-8"
  >
    {
      links.map((link) => (
        <a href={link.href} class="link">
          {link.label}
        </a>
      ))
    }
  </div>

  <a href="/contacto" class="button button-primary hidden md:block">Contacto</a>
</nav>
