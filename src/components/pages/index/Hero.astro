---
import { Image } from "astro:assets";

import IndexHeroImage from "@assets/images/Index.Hero.webp";

import Button from "@components/ui/Button.astro";
---

<section
  class="relative overflow-hidden rounded-3xl bg-gray-200 shadow-lg mb-12"
>
  <Image
    src={IndexHeroImage}
    alt="Participantes de un torneo de ajedrez jugando en una gran sala con banderas de diferentes países"
    class="absolute inset-0 object-cover w-full h-full"
    quality="high"
    loading="eager"
  />

  <div
    class="relative w-full h-full bg-gradient-to-r from-blue-900/80 via-blue-900/40 to-transparent px-8 py-12"
  >
    <div class="flex flex-col gap-4 max-w-2xl">
      <h1 class="text-white text-3xl md:text-5xl font-bold leading-tight">
        El desafío <br />
        <span class="text-blue-200 font-serif italic text-3xl md:text-5xl">
          Internacional
        </span>
      </h1>

      <div class="flex flex-col gap-2">
        <p class="text-white text-lg md:text-xl font-medium">
          XIV Ciudad de Pontevedra
        </p>
        <p class="text-white/80 text-sm md:text-base leading-relaxed">
          Nueve rondas de alta competición en el Pabellón Deportivo
          Universitario. Únete a jugadores de todo el mundo en el evento
          referente de Galicia.
        </p>
      </div>

      <Button href="reglamento" variant="secondary" class="w-fit mt-2"
        >Ver bases</Button
      >
    </div>
  </div>
</section>
